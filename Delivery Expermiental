local TweenService = game:GetService("TweenService") -- Servicio para animaciones
local player = game.Players.LocalPlayer

player.Character.ChildAdded:Connect(function(item)
    if item:FindFirstChild("House") then
        local house = item.House.Value
        local door = house:GetDescendants()

        for i = 1, #door do
            if door[i].Name == "GivePizza" then
                local humanoidRootPart = player.Character:FindFirstChild("HumanoidRootPart")
                if humanoidRootPart then
                    -- Crear un Tween para mover al jugador lentamente
                    local tweenInfo = TweenInfo.new(
                        10, -- Tiempo de duración
                        Enum.EasingStyle.Linear, -- Estilo de animación
                        Enum.EasingDirection.InOut -- Dirección de animación
                    )
                    local goal = {CFrame = door[i].CFrame} -- Posición objetivo
                    local tween = TweenService:Create(humanoidRootPart, tweenInfo, goal)
                    tween:Play() -- Iniciar el Tween
                end
            end
        end
    end
end)
